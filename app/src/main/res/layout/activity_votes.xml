<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Votes"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#FFF8B6"
    android:padding="10dp">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_weight="1"
            android:id="@+id/totalVoterID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Voter: "
            android:textColor="@color/black"
            android:background="@drawable/back2"
            android:textSize="20dp"
            android:padding="10dp"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal">
        </TextView>

        <TextView
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/currentPollID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Poll: "
            android:textColor="@color/black"
            android:background="@drawable/back2"
            android:textSize="20dp"
            android:padding="10dp"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal">
        </TextView>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>
    <View
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/haveVoterId"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Have Voter"
            android:textSize="20dp"
            android:padding="15dp"
            android:backgroundTint="#2A872E"
            android:layout_margin="5dp"
            android:textAllCaps="false">

        </Button>

        <Button
            android:id="@+id/endId"
            android:layout_weight="1"
            android:backgroundTint="#F44336"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End"
            android:textSize="20dp"
            android:padding="15dp"
            android:textAllCaps="false"
            android:layout_margin="5dp">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/checkresultId"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Result"
            android:textSize="20dp"
            android:padding="15dp"
            android:backgroundTint="#673AB7"
            android:layout_margin="5dp"
            android:textAllCaps="false">

        </Button>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>
    <View
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/noukaId"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nouka"
            android:visibility="invisible"
            android:drawableRight="@drawable/nouka"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:padding="15dp"
            android:backgroundTint="#03A9F4"
            android:layout_margin="5dp"
            android:textAllCaps="false">

        </Button>

        <Button
            android:id="@+id/dhaner_seshID"
            android:layout_weight="1"
            android:backgroundTint="#FFEB3B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dhaner Sesh"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:drawableRight="@drawable/dhan"
            android:textSize="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="0dp"
            android:paddingRight="5dp"
            android:textAllCaps="false"
            android:layout_margin="5dp">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/voteDoneId"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vote Done"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:padding="15dp"
            android:visibility="invisible"
            android:backgroundTint="#FFC107"
            android:layout_margin="5dp"
            android:textAllCaps="false">

        </Button>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ResultTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="1dp"
            android:background="#260A57"
            android:gravity="center"
            android:padding="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:shadowColor="@color/black"
            android:text="Hello World!\nHello World!\nHello World!\nHello World!\n"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textIsSelectable="true"
            android:textSize="10pt"
            android:textStyle="bold"
            android:visibility="invisible"
            tools:ignore="RtlCompat"></TextView>
    </RelativeLayout>



</LinearLayout>